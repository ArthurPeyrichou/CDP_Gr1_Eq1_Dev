{% extends "base.html.twig" %}

{% block title %}Informations projet - {{ project.name }}{% endblock %}

{% block body %}

    {% include 'app_header.html.twig' %}

    <div id="login-container" class="container" style="margin-top:10%;">
        <div class="row">
            <div class="col-sm-6 col-lg-8">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">{{ project.name }}</h3>
                        <p class="card-subtitle mb-2 text-muted">
                            <span class="font-weight-bold">Propri√©taire du projet :</span>
                            <a href="mailto:{{ owner.emailAddress }}" class="card-link">{{ owner.name }}</a>
                        </p>
                        <p class="text-justify" class="card-text">{{ project.description }}</p>
                        <a class="btn btn-primary" href="{{ path('editProject', {'id': project.id}) }}">Editer</a>
                        <a class="btn btn-danger" href="/project/{{ project.id }}/delete">Supprimer</a>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-4">
                {% include 'project/project_members.html.twig' %}
            </div>
        </div>

    </div>


{% endblock %}

