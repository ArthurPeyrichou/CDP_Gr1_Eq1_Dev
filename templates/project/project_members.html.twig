<div id="project-member-container">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Liste des membres</h5>
            <ul class="list-group">
                {% if members is not empty %}
                    {% for member in members %}
                        <li class="list-group-item d-flex justify-content-between align-items-center font-weight-bold">
                            <a href="mailto:{{ member.emailAddress }}">
                                {{ member.name }}
                            </a>
                            {% if status is defined and status == "owner" %}
                                <a href="{{ path('deleteMember', {'projectId': project.id, 'memberId': member.id}) }}">&times;</a>
                            {% endif %}
                        </li>
                    {% endfor %}
                {% else %}
                    <li class="list-group-item">Aucun collaborateur</li>
                {% endif %}
            </ul>
            {% if status is defined and status == "owner" %}
            <h5 class="mb-3 mt-4">Inviter un membre</h5>
            <form action="{{ path('inviteToProject', {'id': project.id}) }}" method="POST">
                <div class="form-group">
                    <input type="email" class="form-control" placeholder="Inviter un membre" name="memberEmail" required>
                </div>
                <button type="submit" class="btn btn-primary">Inviter ce membre</button>
            </form>
            {% endif %}
        </div>
    </div>
</div>
