{% extends "base.html.twig" %}

{% block title %}Création de projet{% endblock %}

{% block body %}

    {% include 'app_header.html.twig' %}

    <div id="project-container" style="margin-top:10%;">
        <div class="row">
                <div class="row">
                    <div class="col s12 m6 offset-m3">
                        <div class="card center-align mg">
                            <div class="card-content">
                                {{ form_start(form) }}
                                {{ form_errors(form) }}
                                {{ form_row(form.name) }}
                                {{ form_row(form.description) }}

                                <button id="project-button" class="btn waves-effect waves-light" type="submit">Créer le Projet</button>
                                <a class="btn waves-effect waves-light red" href="{{ path('dashboard') }}">Annuler</a>
                                {{ form_end(form) }}
                            </div>
                         </div>
                    </div>
                </div>
        </div>
    </div>

{% endblock %}
