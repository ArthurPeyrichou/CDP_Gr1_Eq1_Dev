{% extends 'base.html.twig' %}

{% block title %}Création de projet{% endblock %}

{% block body %}

    {% include 'components/error_success_msg.html.twig' %}

    <div class="container" style="margin-top:10%;">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">Nouveau projet :</h3>
                {{ form_start(form) }}
                {{ form_errors(form) }}
                {{ form_row(form.name) }}
                {{ form_row(form.description) }}
                <button type="submit" class="btn btn-primary">Créer le projet</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}
