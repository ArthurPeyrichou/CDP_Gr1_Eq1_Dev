{% extends 'project_frame.html.twig' %}

{% block title %}Création d'une tâche{% endblock %}

{% block content %}
    <div class="container">
        <div class="card">
            <div class="card-body">
                <h3>Création d'une tâche</h3>
                {{ form_start(form) }}
                {{ form_errors(form) }}
                {{ form_row(form.number) }}
                {{ form_row(form.description) }}
                {{ form_row(form.requiredManDays) }}
                {{ form_row(form.developper) }}
                {{ form_row(form.relatedIssues) }}
                <button type="submit" class="btn btn-primary">Créer la tâche</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}
