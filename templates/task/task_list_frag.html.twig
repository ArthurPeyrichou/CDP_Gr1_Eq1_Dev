<script defer>
    function dragStart(event) {
        event.dataTransfer.setData("Text", event.target.id);
    }

    function dragging(event) {
        
    }

    function allowDrop(event) {
        event.preventDefault();
    }

    function drag(ev) {
        ev.dataTransfer.setData("text", ev.target.id);
    }

    function drop(ev) {
        event.preventDefault();
        var data = event.dataTransfer.getData("Text");
        event.target.children[1].children[0].appendChild(document.getElementById(data));
        ref = document.getElementById(data).getAttribute('value');
        if(event.target.getAttribute('class').includes('doing')){
            ref = ref.replace('done','doing');
        }

        var ajax = new XMLHttpRequest();
        ajax.open("GET", ref, true);
        ajax.send();
    }

    function showGraph(title) {
        switch(title){
            case "Status":
                showStatus();
            break;
            case "JH":
                showJH();
            break;
            case "Membre":
                showMembre();
            break;
            case "JHParMembre":
                showJHParMembre();
            break;
        }
    }

    function init() {
        // ajout d'un écouteur d'évènement
        var el = document.getElementById("select-graph");
        el.addEventListener("change", 
        (event) => showGraph(event.target.value)
        , false);
    }

    init();
    showStatus();

</script>