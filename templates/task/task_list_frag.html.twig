<div class="container">
    {% if todos is not empty or doings is not empty or dones is not empty %}
        <div class="row">
            <div class="col-12 px-0 px-lg-1 text-center mb-2">
                <a class="btn btn-primary" href="{{ path('createTask', {'id_project' : project.id,'id_sprint':sprint.id}) }}">Créer une tâche</a>
            </div>
            <div class="col-lg-4 px-0 px-lg-1 my-lg-0 my-1">
                <div class="card card-height" style="overflow-y: scroll; height: 450px;">
                    <div class="card-body">
                        <h3 class= "{{ getClassForStatus("todo")}} badge" style="display: block; font-size: 110%;">A faire</h3>
                        <div class="container-fluid">
                            <ul class="list-unstyled">
                                {% for task in todos %}
                                    {% embed 'task/_task_details.html.twig'%}
                                        {% block buttons %}
                                            <div class="text-center row justify-content-around">
                                                <a class="col-5 btn px-2 border {{ getClassForStatus("doing")}}"
                                                    href="{{ path('changeTaskStatus', {'id_project' : project.id, 'id_task' : task.id, 'status' : 'doing', 'id_sprint':sprint.id}) }}">
                                                    En cours
                                                </a>
                                                <a class="col-5 btn px-2 border {{ getClassForStatus("done")}}"
                                                    href="{{ path('changeTaskStatus', {'id_project' : project.id, 'id_task' : task.id, 'status' : 'done', 'id_sprint':sprint.id}) }}">
                                                    Fait
                                                </a>
                                            </div>
                                            <div class="text-center row justify-content-around" style="margin-top:5px;">
                                                <a class="btn btn-primary my-auto mr-1" href="{{ path('editTask', {'id_project': project.id, 'id_sprint' : sprint.id, 'id_task' : task.id}) }}">Editer</a>
                                                <button class="btn btn-danger my-auto ml-1" data-toggle="modal" data-target="#task-delete-confirm">Supprimer</button>
                                            </div>
                                        {% endblock %}
                                    {% endembed %}
                                    {% embed 'components/_modal.html.twig' with {'modalId': "task-delete-confirm"} %}
                                        {% block header %}
                                            <h3>Veuillez confirmer la suppression</h3>
                                        {% endblock %}
                                        {% block body %}
                                            <p>Êtes-vous sûr(e) de vouloir supprimer la tâche {{ task.number }}</p>
                                        {% endblock %}
                                        {% block footer %}
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Non</button>
                                            <a href="{{ path('deleteTask', {'id_project' : project.id,'id_sprint' : sprint.id, 'id_task' : task.id}) }}" class="btn btn-primary">Oui</a>
                                        {% endblock %}
                                    {% endembed %}
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
