{% if statistic is defined %}
    <script defer>
        function show{{ function }}(){
            // based on prepared DOM, initialize echarts instance
            var myChart = echarts.init(document.getElementById('graphic'));

            // specify chart configuration item and data
            var option = {
                title: {
                    text: '{{ title }}'
                },
                toolbox: {
                    feature: {
                        saveAsImage: {}
                    }
                },
                xAxis: {
                    type: 'category',
                    boundaryGap: false,
                    data: [
                        {% for data in statistic %}
                            "{{ data['value'] }}",
                        {% endfor %}
                        ]
                },
                yAxis: {
                    type: 'value'
                },
                series: [{
                    data: [
                        {% for data in statistic %}
                            {{ data['count'] }},
                        {% endfor %}
                    ],
                    type: 'line',
                    areaStyle: {}
                }]

            };

            // use configuration item and data specified to show chart
            myChart.setOption(option);
        }
    </script>
{% endif %}