{% if statistic is defined %}
    <script defer>
        function show{{ function }}(){
            // based on prepared DOM, initialize echarts instance
            var myChart = echarts.init(document.getElementById('graphic'));

            // specify chart configuration item and data
            var option = {
    title: {
        text: '{{ title }}'
    },
    tooltip : {
        trigger: 'axis',
        axisPointer: {
            type: 'cross',
            label: {
                backgroundColor: '#6a7985'
            }
        }
    },
    legend: {
        data:['{{statisticTitle}}', '{{statistic2Title}}']
    },
    toolbox: {
        feature: {
            saveAsImage: {}
        }
    },
    grid: {
        left: '3%',
        right: '4%',
        bottom: '3%',
        containLabel: true
    },
    xAxis : [
        {
            type : 'category',
            boundaryGap : false,
            data : [{% for data in statistic %}
                            "{{ data['value'] }}",
                        {% endfor %}]
        }
    ],
    yAxis : [
        {
            type : 'value'
        }
    ],
    series : [
        {
            name:'{{statisticTitle}}',
            type:'line',
            stack: '',
            areaStyle: {},
            data:[{% for data in statistic %}
                            {{ data['count'] }},
                        {% endfor %}]
        },
        {
            name:'{{statistic2Title}}',
            type:'line',
            stack: '',
            areaStyle: {},
            data:[{% for data in statistic2 %}
                            {{ data['count'] }},
                        {% endfor %}]
        }
    ]
};

            // use configuration item and data specified to show chart
            myChart.setOption(option);
        }
    </script>
{% endif %}