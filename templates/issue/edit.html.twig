{% extends 'project_frame.html.twig' %}

{% block title %}Edition d'une issue{% endblock %}

{% block content %}

    <div id="edit-issue-container" class="container" style="padding-top:10%; max-width:750px;">
        <div class="container border rounded">
            <div style="margin-top:5%; margin-bottom:5%;">
                {{ form_start(form) }}
                <h3>Editer une issue :</h3>
                {{ form_errors(form) }}
                {{ form_row(form.name) }}
                {{ form_row(form.description) }}
                {{ form_row(form.difficulty) }}
                {{ form_row(form.priority) }}
                {{ form_row(form.status) }}
                <button type="submit" class="btn btn-primary">Modifier l'issue</button>
                <a class="btn btn-outline-danger" href="{{ path('issuesList', {'id_project' : project.id}) }}">Annuler</a>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}
