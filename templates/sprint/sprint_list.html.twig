{% extends 'project_frame.html.twig' %}

{% block title %}Liste des sprints{% endblock %}

{% block content %}

    <div class="container">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title mb-4">Sprints </h3>
                {% if sprints is not empty %}
                    <ul class="list-group">
                        {% for index, sprint in sprints %}
                            <li id="item-{{ sprint.id }}" class="list-group-item">
                                <div class="row">
                                        <div class="col-md-6 col-lg-8">
                                            <div class="font-weight-bold">
                                                <a class="hoverable list-group-item-action" href="{{ path('sprintDetails', {'id_project': project.id,'id_sprint':sprint.id}) }}" title="Voir les tâches associées" >
                                                    <b>{{ sprint.number }}</b> : {{ sprint.description }}
                                                </a>
                                            </div>
                                            <div class="text-muted small">
                                        </div>
                                        </div>
                                        <div class="col-md-6 col-lg-4 d-flex justify-content-md-end mt-2 mt-md-0">
                                            <a class="btn btn-primary my-auto mr-1" href="{{ path('editSprint', {'id_project': project.id, 'id_sprint' : sprint.id}) }}">Editer</a>
                                            <button class="btn btn-danger my-auto ml-1" data-toggle="modal" data-target="#sprint-delete-confirm">Supprimer</button>
                                        </div>
                                </div>
                            </li>
                            {% embed 'components/_modal.html.twig' with {'modalId': "sprint-delete-confirm"} %}
                                {% block header %}
                                    <h3>Veuillez confirmer la suppression</h3>
                                {% endblock %}
                                {% block body %}
                                    <p>Êtes-vous sûr(e) de vouloir supprimer le sprint {{ sprint.number }}</p>
                                {% endblock %}
                                {% block footer %}
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Non</button>
                                    <button type="button" data-dismiss="modal" data-link="{{ path('deleteSprint', {'id_project' : project.id,'id_sprint' : sprint.id }) }}" data-id="{{ project.id }}" 
                                            class="btn btn-primary delete-item">Oui</button>
                                {% endblock %}
                            {% endembed %}
                        {% endfor %}
                    </ul>
                {% else %}
                    <p> Vous n'avez pour l'instant créé aucun sprint.</p>
                {% endif %}
                <a class="btn btn-primary mt-3" href="{{ path('createSprint', {'id_project' : project.id}) }}">Créer un sprint</a>
            </div>
        </div>
    </div>


    <div id="chart" class="container" style="min-width:500px; min-height:300px; max-height:400px; width:80%; margin: auto; margin-top:10%; justify-content:center;"></div>

    {% set data = {
        title: 'Burn Down Chart',
        firstTitle: 'BDC Réel',
        secondTitle: 'BDC Théorique',
        firstDataset: burnDownStat,
        secondDataset: burnDownTheoricStat
    } %}

    <div id="data" data-bdc="{{ data | json_encode }}" class="d-none"></div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('sprintList') }}
{% endblock %}

