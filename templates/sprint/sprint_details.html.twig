{% extends 'project_frame.html.twig' %}

{% block title %}Informations du sprint - {{ sprint.number }}{% endblock %}

{% block content %}

    <div class="container">
        <div class="card">
            <div class="card-body">
                <p class="text-justify" class="card-text">Sprint: {{ sprint.number }}</p>

                <p class="text-justify" class="card-text">
                    <span class="font-weight-bold">Description :</span>
                    {{ sprint.description }}
                </p>
              <div class="text-muted small">
                  <span>Date de début :</span>
                  <span class="font-weight-bold">{{ sprint.startDate.format("d/m/Y") }}</span>
                  <span>| Durée estimé pour la réalisation :</span>
                  <span class="font-weight-bold">{{ sprint.estimatedDuration }}</span>
              </div>

            </div>

            <div class="btn-group btn-group-justified">
                <a class="btn btn-primary" href="{{ path('tasksList', {'id_project': project.id,'id_sprint': sprint.id}) }}">Listes des tâches associés à ce sprint</a>
                <a class="btn btn-primary"  href="{{ path('createTask', {'id_project': project.id,'id_sprint': sprint.id}) }}">Créer une tâche</a>
            </div>
        </div>
    </div>



{% endblock %}

