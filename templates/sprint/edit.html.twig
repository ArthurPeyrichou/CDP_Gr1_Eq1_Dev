{% extends 'project_frame.html.twig' %}

{% block title %}Edition d'un sprint{% endblock %}

{% block content %}

    <div class="container">
        <div class="card">
            <div class="card-body">
                <h3>Editer un sprint :</h3>
                {{ form_start(form) }}
                {{ form_errors(form) }}
                {{ form_row(form.number) }}
                {{ form_row(form.description) }}
                {{ form_row(form.startDate) }}
                {{ form_row(form.durationInDays) }}
                <button type="submit" class="btn btn-primary">Modifier le sprint</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}
