{% extends 'base.html.twig' %}

{% block body %}
    <div id="main">
        <div id="sidebar">
            <header class="text-center d-none d-sm-block align-middle py-sm-2">
                <h3>Projet</h3>
            </header>
            <ul class="list-unstyled sidebar_nav py-sm-3 pt-5">
                <li class="py-sm-2">
                    <a href="{{ path('projectDetails', {'id': project.id}) }}">
                        <img class="icon" src="{{ asset('build/images/details.svg') }}" alt="Détails">
                        <span class="d-none d-sm-inline">Détails du projet</span>
                    </a>
                </li>
                <li class="py-sm-2">
                    <a href="{{ path('sprintsList', {'id_project': project.id}) }}" role="button" aria-haspopup="true" aria-expanded="false">
                        <img class="icon" src="{{ asset('build/images/sprint.svg') }}" alt="Sprints" style="max-width: 30px;">
                        <span class="d-none d-sm-inline">Sprints</span>
                    </a>
                </li>
                <li class="py-sm-2">
                    <a  href="{{ path('issuesList', {'id_project': project.id}) }}" role="button" aria-haspopup="true" aria-expanded="false">
                        <img class="icon" src="{{ asset('build/images/issue.svg') }}" alt="Issues" style="max-width: 30px;">
                        <span class="d-none d-sm-inline">Issues</span>
                    </a>
                </li>

                <li class="py-sm-2">
                    <a href="{{ path('testsList', {'id_project': project.id}) }}" role="button" aria-haspopup="true" aria-expanded="false">
                        <img class="icon" src="{{ asset('build/images/test.svg') }}" alt="Tests" style="max-width: 30px;">
                        <span class="d-none d-sm-inline">Tests</span>
                    </a>
                </li>
                <li class="py-sm-2">
                    <a href="{{ path('releasesList', {'id_project': project.id}) }}" role="button" aria-haspopup="true" aria-expanded="false">
                        <img class="icon" src="{{ asset('build/images/release.svg') }}" alt="Releases" style="max-width: 30px;">
                        <span class="d-none d-sm-inline">Releases</span>
                    </a>
                </li>
                <li class="py-sm-2">
                    <a href="{{ path('ressourcesDocList', {'id_project': project.id}) }}" role="button" aria-haspopup="true" aria-expanded="false">
                      <img class="icon" src="{{ asset('build/images/documentation.svg') }}" alt="Documentation" style="max-width: 30px;">
                        <span class="d-none d-sm-inline">Documentation</span>
                    </a>
                </li>
            </ul>
        </div>
        <div id="content" style="padding-top: 5%;">

            {% include 'components/error_success_msg.html.twig' %}

            {% if project is defined and project is not null %}
            <h1 style="text-align:center; margin-bottom: 5%; margin-top: 5%;">
            {{ project.getName() }}
            </h1>
            {% endif %}
            {% block content %}{% endblock %}
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('sidebar') }}
{% endblock %}
