{% extends 'base.html.twig' %}

{% block title %}Reset Password !{% endblock %}

{% block body %}

        <div class="container" style="margin-top:10%; max-width:750px;">
            <div class="card">
                <div class="card-body">
        <h1 class="h3 mb-3 font-weight-normal">Renouveler votre mot de passe </h1>
    <form method="post">
        <div class="form-group">
        <label for="password">Mot de passe</label>
        <input id="password" name="password" type="password" minlength="8" maxlength="50" class="form-control" placeholder="Votre mot de passe" required />
        <input type="hidden" name="resetToken" value="{{ token }}">
        <button class="btn btn-lg btn-primary" type="submit">s'enregister</button>
                </div>
    </form>
                </div>
            </div>
        </div>
{% endblock %}