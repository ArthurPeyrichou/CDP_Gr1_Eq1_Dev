{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

    {% include 'components/error_success_msg.html.twig' %}

    <div class="container" style="margin-top:10%; max-width:750px;">
        <div class="card">
            <div class="card-body">
                <h3>Inscription :</h3>
                {{ form_start(form) }}
                {{ form_errors(form) }}
                {{ form_row(form.name) }}
                {{ form_row(form.emailAddress) }}
                {{ form_row(form.password) }}
                <button type="submit" class="btn btn-primary btn-dark">S'enregister</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('register') }}
{% endblock %}
