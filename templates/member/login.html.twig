{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

    {% include 'components/error_success_msg.html.twig' %}

    <div class="container" style="margin-top:10%; max-width:750px;">
        <div class="card">
            <div class="card-body">
                <h3>Connexion :</h3>
                <form action="/login" method="POST">
                    <div class="form-group">
                        <label for="email">Adresse mail</label>
                        <input id="email" value="{{ last_typed_email }}" name="emailAddress" type="email" minlength="5" maxlength="128" class="form-control" placeholder="Votre Email" required />
                    </div>
                    <div class="form-group">
                        <label for="password">Mot de passe</label>
                        <input id="password" name="password" type="password" minlength="8" maxlength="50" class="form-control" placeholder="Votre mot de passe" required />
                    </div>
                    <button type="submit" class="btn btn-primary btn-dark">Se connecter</button>
                    {{error | default('')}}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
                </form>
            </div>
        </div>
    </div>
{% endblock %}
